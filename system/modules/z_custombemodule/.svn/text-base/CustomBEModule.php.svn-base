/**
 * Class CustomBEModule 
 *
 * @copyright  Yanick Witschi 2010 
 * @author     Yanick Witschi <yanick.witschi@certo-net.ch> 
 * @package    Controller
 */
class CustomBEModule extends Backend
{
	/**
	 * Initialize the object
	 */
	public function __construct()
	{
		parent::__construct();
	}
	
	
	/**
	 * Redirects the module to where it should
	 */
	protected function generate()
	{
 		$objFW = $this->Database->prepare("SELECT forwardto FROM tl_custombemodule WHERE tabname=?")
								->limit(1)
								->execute($this->Input->get('do'));
		
		$strRedirect = $this->Environment->script . '?' . $objFW->forwardto;

		$this->Import('String');
		$strRedirect = $this->String->decodeEntities($strRedirect);
		
		$this->redirect($strRedirect);
	}

}

